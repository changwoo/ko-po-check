#!/bin/sh

FILTERS="language/spell"

DIR="`dirname $0`"
NAME="`basename $0 .test`"
BUILDDIR=`pwd`
POFILE=$NAME.po
OUTFILE=$NAME.out

cd $srcdir

TFM=`mktemp`
python $BUILDDIR/../scripts/ko-po-check --moduledir=$srcdir/.. --checksdir=$srcdir/../checks --filters="${FILTERS}" $POFILE > $TFM
diff -u $TFM $OUTFILE
RESULT=$?
rm -f $TFM
exit $RESULT
