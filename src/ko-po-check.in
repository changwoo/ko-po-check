#! /usr/bin/env python

import os,sys

moduledir = "@prefix@/share/ko-po-check"
filtersdir = moduledir + "/filters"

sys.path.append(moduledir)

import po,poparse

if sys.argv[1:]:
    fn = sys.argv[1]
else:
    fn = '-'

if fn == '-':
    fp = sys.stdin
else:
    fp = open(fn)

catalog = poparse.parse_file(fp)

import string,re
import glob

filenames = glob.glob(filtersdir + "/*.py")
filters = {}
for filename in filenames:
    f = {}
    execfile(filename, f)
    filters[f['name']] = f

for entry in catalog.entries:
    for fn in filters.keys():
        t,e = filters[fn]['check'](entry.msgid, entry.msgstr)
        if not t:
            print "%s:%d: %s" % (fn,entry.msgstr_lineno,e)
